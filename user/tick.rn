use json::*;
use rand::*;
use time::*;

fn test_stuff(bag) {
    let args = #{
        "target": bag.living().unwrap().key(),
        "tagged": #{
            "example": #{}
        }
    };

    let scheduling = actions::rune::rune(args)?;

    [
        actions::chat::speak(ActionArgs {
            here: Some("Whoa there!")
        })?,

        actions::scheduling::schedule(#{
            "entity": bag.item().unwrap().key(),
            "key": "TEST",
            "time": #{ "delay": 5000 },
            "action": scheduling
        })?
    ]
}

pub fn held(bag) {
    test_stuff(bag)
}

pub fn dropped(bag) {
    // info(format!("dropped {:?}", bag));
